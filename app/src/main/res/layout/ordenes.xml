<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#03A9F4"
        android:padding="10dp">

        <TextView
            android:id="@+id/nombreorden"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Nombre:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/telefonoeorden"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Telefono:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/precioorden"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreorden"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:text="Precio:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/coreoorden"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/precioorden"
            android:layout_marginTop="0dp"
            android:text="Correo y direccion:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/formaPagoOrden"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coreoorden"
            android:layout_marginTop="0dp"
            android:text="Forma de Pago:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fechaorden"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/formaPagoOrden"
            android:layout_marginTop="0dp"
            android:text="Fecha Y Hora:"
            android:textSize="20dp" />

        <Button
            android:id="@+id/verorden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fechaorden"
            android:text="VER PRODUCTOS DE ESTA ORDEN" />
    </RelativeLayout>
</RelativeLayout>